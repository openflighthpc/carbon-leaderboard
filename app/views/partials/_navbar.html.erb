<div id="nav-bar">
  <a
    href="<%= root_path %>"
    title="OpenFlightHPC Carbon Leaderboard"
  >
    <%= image_tag "logo.svg", class: "logo" %>
  </a>

  <ul class="links">
    <div class="dropdown">
      <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Leaderboards
      </button>
      <ul class="dropdown-menu">
        <%= link_to "Server leaderboard", leaderboard_path, class: "dropdown-item" %>
      </ul>
    </div>
  </ul>

  <div class="top-right">
    <% if user_signed_in? %>
      <span><%= current_user.username %></span>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <!-- Button trigger modal -->
      <%= button_to "Log in", new_user_session_path %>
    <% end %>
    <a
      class="powered"
      href="https://alces-flight.com/"
      target="_blank"
    >
      <%= image_tag "poweredby.svg", class: "logo" %>
    </a>
  </div>
</div>
