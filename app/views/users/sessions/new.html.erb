<div class="card login flex-column-centred">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="icon-wrapper user-field">
      <%= f.text_field :username, class: 'text-field', placeholder: 'Username or email', maxlength: '40' %>
    </div>
    <div class="icon-wrapper password-field">
      <%= f.password_field :password, class: 'text-field', placeholder: 'Password', maxlength: '40' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Sign in/up", class: "general-button glaring" %>
    
    <%= render "devise/shared/links" %>
  <% end %>

</div>

<script type="text/javascript" src="/assets/users/sessions/new.js"></script>
